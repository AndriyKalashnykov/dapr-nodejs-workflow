    "@types/readline-sync": "^1.4.8",
    "readline-sync": "^1.4.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@dapr/dapr": "^3.5.2",
    "@dapr/dapr-dev": "3.5.2-20250813010318-26e8be8",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^18.19.125",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
